<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Daftar Buku</title>

  <!-- AOS CSS -->
  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />

  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f2f4f8;
      margin: 0;
      padding: 30px;
    }

    h1 {
      text-align: center;
      color: #333;
      margin-bottom: 25px;
      font-size: 32px;
    }

    .add-btn {
      display: block;
      width: 200px;
      margin: 0 auto 30px;
      padding: 12px;
      background: #4f7cff;
      color: white;
      text-align: center;
      text-decoration: none;
      border-radius: 10px;
      font-weight: bold;
      transition: 0.2s ease;
    }

    .add-btn:hover {
      background: #3c68e0;
    }

    .book-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      gap: 20px;
      width: 90%;
      margin: auto;
    }

    .book-card {
      background: white;
      padding: 18px;
      border-radius: 12px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.06);
      transition: 0.2s ease;
      position: relative;
    }

    .book-card:hover {
      transform: translateY(-5px);
    }

    .book-cover {
      width: 100%;
      height: 180px;
      object-fit: cover;
      border-radius: 10px;
      margin-bottom: 12px;
    }

    .book-title {
      font-size: 20px;
      font-weight: bold;
      color: #333;
    }

    .book-author {
      color: #666;
      margin-top: 4px;
    }

    .book-rating {
      margin-top: 8px;
      font-weight: bold;
      color: #f4a100;
    }

    .book-notes {
      margin-top: 10px;
      font-size: 14px;
      color: #444;
    }

    .book-date {
      margin-top: 6px;
      font-size: 13px;
      color: #888;
    }

    /* Tombol Edit */
    .edit-btn {
      display: block;
      width: 100%;
      margin-top: 15px;
      padding: 10px;
      background: #4CAF50;
      color: white;
      text-align: center;
      border-radius: 8px;
      text-decoration: none;
      font-weight: bold;
      transition: 0.2s ease;
    }

    .edit-btn:hover {
      background: #3f9442;
    }
 .sort-container {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 12px;
  margin-bottom: 30px;
  flex-wrap: wrap;
}

.sort-label {
  font-weight: bold;
  color: #444;
  font-size: 15px;
}

.sort-link {
  padding: 8px 14px;
  border-radius: 8px;
  background: #ffffff;
  color: #333;
  font-weight: bold;
  text-decoration: none;
  box-shadow: 0 3px 10px rgba(0,0,0,0.08);
  transition: 0.2s ease;
}

.sort-link:hover {
  background: #4f7cff;
  color: white;
  transform: translateY(-2px);
}



  </style>
</head>

<body>

  <h1 data-aos="fade-down">Daftar Buku</h1>

  <a href="/books/new" class="add-btn" data-aos="fade-down" data-aos-delay="150">
    + Tambah Buku Baru
  </a>
  <div class="sort-container" data-aos="fade-down" data-aos-delay="250">
  <span class="sort-label">Sortir Rating:</span>

  <a href="/books?sort=asc" class="sort-link">
    Terendah → Tertinggi
  </a>

  <a href="/books?sort=desc" class="sort-link">
    Tertinggi → Terendah
  </a>
</div>


  <div class="book-grid">

    <% books.forEach((book, index) => { %>
      <div class="book-card" 
           data-aos="fade-up" 
           data-aos-delay="<%= index * 80 %>">

        <img
          src="<%= `https://covers.openlibrary.org/b/id/${book.cover_url}.jpg` %>"
          alt="Cover"
          class="book-cover"
        >

        <div class="book-title"><%= book.title %></div>

        <div class="book-author">oleh <%= book.author || 'Tidak diketahui' %></div>

        <div class="book-rating">Rating: <%= book.rating %>/5</div>

        <% if (book.notes) { %>
          <div class="book-notes">"<%= book.notes %>"</div>
        <% } %>

        <% if (book.read_date) { %>
          <div class="book-date">Selesai: <%= book.read_date %></div>
        <% } %>

        <!-- Tombol Edit -->
        <a href="/books/edit/<%= book.id %>" class="edit-btn">Edit Buku</a>

      </div>
    <% }) %>

  </div>

  <!-- AOS JS -->
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script>
    AOS.init({
      once: true,
      duration: 800,
      easing: "ease-out-quart"
    });
  </script>
  </script>
</body>
</html>
